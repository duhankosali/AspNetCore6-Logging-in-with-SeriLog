{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.MongoDB", "Serilog.Sinks.Seq" ],
    "MinumumLevel": "Information",
    "Writeto": [
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341/"
        }
      },
      {
        "Name": "MongoDB",
        "Args": {
          "databaseUrl": "mongodb://localhost:27017/GithubTest?readPreference=primary&directConnection=true&ssl=false",
          "collectionName": "Logs",
          "cappedMaxSizeMb": "1024",
          "cappedMaxDocuments": "50000"
        }
      }

    ],
    "Enrich": [ "WithMachineName" ],
    "Properties": {
      "ApplicationName": "Logging in ASPNetCore",
      "CodeOwner": "Duhan Kösali",
      "GitHub": "https://github.com/duhankosali"
    }
  }



}
